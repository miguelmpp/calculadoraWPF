<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="420" Width="720" WindowStartupLocation="CenterScreen">
	<Grid Margin="16">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="280" />
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0" VerticalAlignment="Top">
			<TextBlock Text="Entrada" FontSize="14" Margin="0,0,0,4"/>
			<TextBox x:Name="campoDeEntrada" Height="40" FontSize="16" KeyDown="campoDeEntrada_KeyDown" Margin="0,0,0,12"/>
			<Button x:Name="botaoBuffer" Content="Enter" Height="40" Width="110" Click="botaoBuffer_Click" Margin="0,0,0,12"/>
			<StackPanel Orientation="Horizontal">
				<Button x:Name="clear" Content="Clear" Height="40" Width="110" Click="clear_Click" Margin="0,0,12,0"/>
				<Button x:Name="processa" Content="Process" Height="40" Width="110" Click="processa_Click"/>
			</StackPanel>
		</StackPanel>

		<StackPanel Grid.Column="1" VerticalAlignment="Top">
			<TextBlock Text="Expressão" FontSize="14" Margin="0,0,0,4"/>
			<TextBox x:Name="conteudo" Width="260" Height="200" FontSize="14" IsReadOnly="True" TextWrapping="Wrap" Margin="0,0,0,12"/>
			<TextBlock Text="Resultado" FontSize="14" Margin="0,8,0,4"/>
			<TextBox x:Name="textoSaida" Width="260" Height="40" FontSize="18" IsReadOnly="True"/>
		</StackPanel>
	</Grid>
</Window>
